/* //Common Css Start */
*{
    padding: 0;
    margin: 0;
    outline: 0;
    box-sizing: border-box;
}
body{
    font-family: 'Open Sans', sans-serif;
}
a{
   text-decoration: none; 
}
ul{
    list-style-type: none;
}
.container{
    width: 1170px;
    margin: 0 auto;
}
.row{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
/* //Common Css End */

/* //Nav Section Start */
nav{
    background-color: #02918c;
}
nav .logo{
    width: 25%;
}
nav .logo img{
    display: block;
}
nav .menu{
    width: 75%;
    text-align: right;
}
nav .menu ul li{
    display: inline-block;
    margin: 22px 0;
}
nav .menu ul li a{
    display: inline-block;
    font-size: 12px;
    font-weight: 800;
    text-transform: uppercase;
    color: #fff;
    padding: 0px 25px;
    transition: all .2s linear;
}
nav .menu ul li:hover a{
    color: #cfc91d;
    
}
/* //Nav Section End */

/* //Banner Section Start */
#banner{
    text-align: center;
    padding: 236px 0;
    background-image: url(../images/banner.jpg);
    background-size: cover;
    background-position: center;
}
#banner img.shape{
   display: block;
   margin: 0 auto;
   padding: 34px 0;
}
#banner h6{
    font-size: 25px;
    color: #fff;
    padding: 6px 0;
}
#banner h1{
    font-size: 68px;
    font-weight: 800;
    letter-spacing: 25px;
    text-transform: uppercase;
    color: #fff;
}
#banner p{
    color: #fff;
}
.b{
	display: inline-block;
	
}
.b a{
    background-color: #cfc91d;
    display: inline-block;
    font-size: 14px;
    font-weight: 800;
    text-transform: uppercase;
    color: #000;
    padding: 18px 42px;
}

.b:hover a{
	
	background-color: #02918c;
	color: #cfc91d;
}
/* //Banner Section End */